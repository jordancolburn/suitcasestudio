// Carousel
// ==================================================
#myCarousel.carousel.slide(data-ride='carousel')
  // Indicators
  ol.carousel-indicators
    li.active(data-target='#myCarousel', data-slide-to='0')
    li(data-target='#myCarousel', data-slide-to='1')
    li(data-target='#myCarousel', data-slide-to='2')
  .carousel-inner
    .item.active
      img(src='/images/IMG_6058.jpg', alt='First slide')
      .container
        .carousel-caption
          h1 Music Licensing
          p
            Instrumental Music for your next project
          p
            a.btn.btn-lg.btn-primary(href='/music', role='button') Listen Now
    .item
      img(src='/images/IMG_6073.jpg', alt='Second slide')
      .container
        .carousel-caption
          h1 Music Licensing
          p
            Instrumental Music for your next project
          p
            a.btn.btn-lg.btn-primary(href='/music', role='button') Listen Now
    .item
      img(src='/images/IMG_6063.jpg', alt='Third slide')
      .container
        .carousel-caption
          h1 Music Licensing
          p
            Instrumental Music for your next project
          p
            a.btn.btn-lg.btn-primary(href='/music', role='button') Listen Now
  a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
    span.glyphicon.glyphicon-chevron-left
  a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
    span.glyphicon.glyphicon-chevron-right
